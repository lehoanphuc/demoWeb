
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table align="center">
    <h2 style="text-align:center">ĐĂNG KÝ THÀNH CÔNG</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Họ tên khách hàng:</td>
            <td>
                @Html.TextBox("TENKHACHHANG")
                @ViewData["Error1"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Tên đăng nhập:</td>
            <td>
                @Html.TextBox("USERNAME")
                @ViewData["Error2"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Mật khẩu:</td>
            <td>
                @Html.TextBox("PASS")
                @ViewData["Error3"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Gmail:</td>
            <td>
                @Html.TextBox("GMAIL")
                @ViewData["Error4"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Điện thoại:</td>
            <td>
                @Html.TextBox("SDT")
                @ViewData["Error5"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Giới tính:</td>
            <td>
                @Html.TextBox("GIOITINH")
                @ViewData["Error6"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Ngày sinh:</td>
            <td>
                <input type="date" name="NAMSINH" />
            </td>
        </tr>
        <tr style="height:40px">
            <td>Địa chỉ:</td>
            <td>
                @Html.TextBox("DIACHI")
                @ViewData["Error8"]
            </td>
        </tr>
        
        <tr style="height:40px">
            <td></td>
            <td>
                <input type="Submit" value="Đăng ký" />
            </td>
        </tr>
    }
</table>

