@using demoWeb.Models
@model List<Giohang>
@{
    ViewBag.Title = "Giohang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">THÔNG TIN GIỎ HÀNG</h2>
<table align="center" border="1">
    <tr style="text-align:center; font-weight:bold">
        <td> Mã Sản Phẩm </td>
        <td> Tên Sản Phẩm </td>
        <td> Ảnh </td>
        <td> Số lượng </td>
        <td> Đơn giá </td>
        <td> Thành tiền </td>
        <td width="50px"></td>
        <td width="50px"></td>
        <td width="50px"></td>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align:center; font-weight:bold">
            <td> @item.MaSP</td>
            <td> @item.TenSP</td>
            <td><img src="~/Content/images/@item.Hinh" /></td>
            @using (Html.BeginForm("CapNhatGioHang", "Giohang", new { @MaSP = item.MaSP }))
            {
                <td><input type="number" min="1" name="txtSoLuong" value="@item.SoLuong" style="background-color:lightgoldenrodyellow; text-align:right" /></td>
                <td> @String.Format("{0:0,0}", item.Gia)</td>
                <td> @String.Format("{0:0,0}", item.ThanhTien)</td>
                <td><a href="@Url.Action("Details", "Home", new { id = item.MaSP})">Chi tiết</a></td>
                <td>@Html.ActionLink("Xóa", "XoaGioHang", new { @MaSP = item.MaSP })</td>
                <td><input type="submit" value="Cập Nhật" /></td>
            }
        </tr>
    }
    <tr style="font-weight:bold; text-align:right; color:red">
        <td colspan="4">Số lượng San Pham: @ViewBag.TongSoLuong</td>
        <td colspan="5">Tổng tiền: @String.Format("{0:0,0}", ViewBag.TongTien) VNĐ </td>
    </tr>
    <tr style="font-weight:bold; color:blue; text-align:right">
        <td colspan="9">
            @Html.ActionLink("XÓA GIỎ HÀNG", "XoaTatCaHang")
        </td>
    </tr>
    <tr style="font-weight:bold; color:blue; text-align:right">
        <td colspan="9" align="center">
            @Html.ActionLink("ĐẶT HÀNG", "DatHang", "Giohang")
        </td>
    </tr>
</table>

